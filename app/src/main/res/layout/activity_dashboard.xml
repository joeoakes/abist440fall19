<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SQLite.Dashboard">

    <EditText
        android:id="@+id/editText_temperature"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editText_ObjectFound"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_objFound"
        android:layout_toRightOf="@+id/textView_objFound"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_temp"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editText_humidity"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:layout_below="@+id/editText_ObjectFound"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_objFound"
        android:layout_toRightOf="@+id/textView_objFound"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_humidity"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editText_pressure"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editText_ObjectFound"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_objFound"
        android:layout_toRightOf="@+id/textView_objFound"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_pressure"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editText_ambient"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editText_ObjectFound"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_objFound"
        android:layout_toRightOf="@+id/textView_objFound"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_ambLight"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/editText_battery"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editText_ObjectFound"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_objFound"
        android:layout_toRightOf="@+id/textView_objFound"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_battLvl"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_timestamp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Temperature"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_pressure" />

    <TextView
        android:id="@+id/textView_pressure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_timestamp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Pressure"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_humidity" />

    <TextView
        android:id="@+id/textView_humidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_timestamp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Humidity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ambLight" />

    <TextView
        android:id="@+id/textView_ambLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_timestamp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Ambient Light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_battLvl" />


    <TextView
        android:id="@+id/textView_battLvl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_timestamp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Battery Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_objFound" />

    <TextView
        android:id="@+id/textView_timeStamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Timestamp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_id" />

    <TextView
        android:id="@+id/textView_objFound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_ObjectFound"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Object Found"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_timeStamp" />

    <TextView
        android:id="@+id/editText_timestamp"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/textView_timeStamp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_timeStamp"
        android:layout_toRightOf="@+id/textView_timeStamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_id" />

    <EditText
        android:id="@+id/editText_ObjectFound"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_objFound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_objFound" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:text="Add Data"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_viewAll"
        app:layout_constraintEnd_toStartOf="@+id/button_viewAll"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_update"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="View All"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_add"
        app:layout_constraintTop_toBottomOf="@+id/editText_temperature" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_add"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:text="Update"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_delete"
        app:layout_constraintEnd_toStartOf="@+id/button_delete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_viewAll"
        android:layout_alignStart="@+id/button_viewAll"
        android:layout_alignLeft="@+id/button_viewAll"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="Delete"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_update"
        app:layout_constraintTop_toBottomOf="@+id/button_viewAll" />

    <TextView
        android:id="@+id/textView_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="ID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/textView_id"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/textView_objFound"
        android:layout_toRightOf="@+id/textView_objFound"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_id"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>